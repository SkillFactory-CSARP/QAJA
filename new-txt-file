git config --global user.name "Ayrat Rakhmatullin"

git config --global user.email "ayratrakhmatullin@gmail.com"

cd (название папки) # переход в нужный каталог для работы

touch (название файла)  # создание файла

git log # проверяет были ли изменения. Показывает коммиты

git status # проверяет статус файлов: какие файлы в каком состоянии

git add (название файла) # добавляет файл в список отслеживаемых

vim (название файла) #переход в редактор

git diff # показывает какие изменения были внесены в файл

git commit -am "..."# сохранение коммита (всех файлов в директории)

git reset (хеш коммита) # откат к нужному коммиту

git mv (старое название файла) (новое название файла) # переименование файла

git rm (имя файла) #удаление файла

git restore --staged <имя файла> # откат изменений

git branch # просмотр веток 

git checkout -b <имя ветки> # создание ветки

git checkout -b # переход на ветку для работы

